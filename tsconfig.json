{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/types/*", "src/**/*.vue"],
  "compilerOptions": {
    "baseUrl": ".",
    "ignoreDeprecations": "5.0",
    "noImplicitAny": false,
    "noImplicitThis": false,
    "types": ["webpack-env"],
    "paths": {
      "@/*": ["./src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
