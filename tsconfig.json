{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["src/**/*"],
  "compilerOptions": {
    "lib": ["ES2015", "ES2016", "DOM"],
    "types": ["node"],
    "baseUrl": ".",
    "ignoreDeprecations": "5.0",
    "noImplicitAny": false,
    "noImplicitThis": false,
    "paths": {
      "@/*": ["src/*"]
    }
  }
}
