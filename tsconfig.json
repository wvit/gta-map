{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["src/**/*"],
  "compilerOptions": {
    "lib": ["ES2015", "DOM"],
    "baseUrl": ".",
    "ignoreDeprecations": "5.0",
    "noImplicitAny": false,
    "noImplicitThis": false,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
